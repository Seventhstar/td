<div class="index_filter">
  <%= chosen_src 'cat_id', Cat.all, @cat_id,{class: 'schosen'} %>
</div>

      <header id="header">
        <h1>todos</h1>
          
         
          <input id="new_task_name" name="new_task[name]" placeholder="Новая задача">

      </header>

<% if @tasks %> 
<ul id="todo-list" model="Task">
<% @tasks.each do |task| %>
<li data-id='<%= task.id %>'>
        <div class="view">
          <input class="toggle" type="checkbox" <%= task.done ? 'checked=""true""' : '' %>>
          <label><%= task.name %></label>
          <% tool_icons(task,{icons:'edit,delete',tag: 'span'}) %>
          <!-- <button class="edit"></button>
          <button class="destroy"></button> -->
          <span class="letter"><%= task.cat_name_a %></span>
        </div>
        <input class="edit" name="upd<%= task.id %>[name]" value="<%= task.name %>">
      </li>
<% end %>
<% end %>
</ul>
</section>