<% provide(:title, 'Log in') %>


<div class="box_cent form_c auth_form" style="top: 200px;">
<%= form_for(:session, url: login_path) do |f| %>
  <fieldset>
    <table class="tbl_fc">
        <tbody>
        <tr>
          <td class="caption">E-Mail:</td>
          <td><%= f.email_field :email, class: 'inp_w txt' %></td>
        </tr>
        <tr>
          <td class="caption">Пароль:</td>
          <td><%= f.password_field :password, class: 'inp_w txt' %></td>
        </tr>
        <tr>
          <td class="caption"></td>
          <td><label class="inp_btn_label">
              <div class="inp_btn checkbox active"><%= f.check_box :remember_me %></div><span>Запомнить меня</span></label>
                <div class="forgot_pass">
                <%= link_to "Забыли пароль?", new_password_reset_path, :class => "forgot_pass grey" %>
            </div>
          </td>
        </tr>
        <tr>
          <td class="caption"></td>
          <td>
            <%= f.submit "Войти", class: "btn btn_a" %>
            <% link_to "Регистрация", signup_path, :class => "orange registr_link" %>
          </td>
        </tr>
      </tbody></table>
  </fieldset>
<% end %>
</div>